<mjml>
    <mj-include path="../../../templates/emails/email_styles.mjml"/>

    <mj-body>
        <mj-include path="../../../templates/emails/email_top.mjml"/>

        <mj-section>
            <mj-column>
                <mj-text>
                    Hello {{ username }},
                </mj-text>

                <mj-text>
                    {% blocktrans %}
                    We have received a request to reset the password associated with your account. If you did not make this request, you can safely ignore this email.
                    {% endblocktrans %}
                </mj-text>
            </mj-column>
        </mj-section>
                
        <!-- Password Reset CTA section -->
        <mj-wrapper mj-class="content-block-wrapper" css-class="content-block-wrapper-loose">
            <mj-section mj-class="content-block" padding="8px 24px">
                <mj-column padding="0px">
                    <mj-text 
                        align="center" 
                        color="#161C22" 
                        font-size="16px" 
                        font-weight="500" 
                        padding-bottom="6px"
                        line-height="1.5">
                        {% blocktrans %}
                        Click the button below to reset your password and sign in.
                        {% endblocktrans %}
                    </mj-text>
                    
                    <mj-button mj-class="cta-button" href="{{ reset_link }}">
                        Reset Password
                    </mj-button>
                </mj-column>
            </mj-section>
        </mj-wrapper>
        
        <mj-section>
            <mj-column>
                <mj-text align="center" color="#6B7280" font-size="13px" padding-top="8px">
                    {% blocktrans %}
                    Alternatively, you can copy and paste the following link into a browser:
                    {% endblocktrans %}
                    <br/>
                    <a href="{{ reset_link }}" style="color: #0A66C2; word-break: break-all;">{{ reset_link }}</a>
                </mj-text>
            </mj-column>

        </mj-section>
        <mj-include path="../../../templates/emails/email_greeting.mjml"/>
    </mj-body>
</mjml>
